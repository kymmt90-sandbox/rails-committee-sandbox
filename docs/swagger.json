{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Rails Committee Sandbox",
    "license": {
      "name": "MIT"
    }
  },
  "host": "github.com",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "get all users",
        "operationId": "userIndex",
        "tags": [
          "users"
        ],
        "responses": {
          "200": {
            "description": "Users",
            "schema": {
              "properties": {
                "users": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "create a user",
        "operationId": "userCreate",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "user params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A user",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "get users",
        "operationId": "userShow",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "user ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A user",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "not found error",
            "schema": {
              "$ref": "#/definitions/Errors"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "allOf": [
        {
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "integer"
            }
          }
        },
        {
          "$ref": "#/definitions/NewUser"
        }
      ]
    },
    "NewUser": {
      "required": [
        "email",
        "name"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer"
        }
      }
    },
    "Error": {
      "required": [
        "title",
        "detail"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "detail": {
          "type": "string"
        }
      }
    },
    "Errors": {
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  }
}
